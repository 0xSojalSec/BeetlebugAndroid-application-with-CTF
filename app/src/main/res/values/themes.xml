<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Beetlebug" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="week_bars">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="week_progress_bars">
        <item name="background_progress_color">@color/default_bar_background_color</item>
        <item name="foreground_progress_gradient_colors">@array/gradient_colors</item>
        <item name="foreground_progress_thickness">8</item>
        <item name="background_progress_thickness">8</item>
        <item name="rounded_corner">true</item>
    </style>

    <style name="lesson_bar">
        <item name="foreground_progress_thickness">20</item>
        <item name="background_progress_thickness">20</item>
        <item name="background_progress_color">#bdbdbd</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="lesson_bar_text">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>